{
  "name": "graphql-introspection-whitelist",
  "version": "0.2.0",
  "description": "Simple white listing for GraphQL introspection queries, based on types.",
  "source": "index.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eschaefer/graphql-introspection-whitelist.git"
  },
  "bugs": {
    "url": "https://github.com/eschaefer/graphql-introspection-whitelist/issues"
  },
  "homepage": "https://github.com/eschaefer/graphql-introspection-whitelist",
  "keywords": [
    "graphql",
    "apollo",
    "query",
    "introspection",
    "whitelist",
    "white",
    "list",
    "validation"
  ],
  "scripts": {
    "test": "jest test.js",
    "docs": "documentation readme index.js --section=API",
    "build": "microbundle index.js -f es,cjs --target node --output dist --sourcemap false",
    "release": "npm run build && np"
  },
  "author": "Eric Schaefer <omg@eric-schaefer.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "apollo-server-express": "^2.8.1",
    "babel-jest": "^24.8.0",
    "body-parser": "^1.19.0",
    "documentation": "^12.1.1",
    "express": "^4.17.1",
    "flow-bin": "^0.104.0",
    "graphql": "^14.4.2",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "microbundle": "^0.11.0",
    "np": "^5.0.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "peerDependencies": {
    "graphql": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "flow focus-check",
      "prettier --parser flow --write",
      "git add"
    ]
  },
  "transform": {
    "^.+\\.js?$": "babel-jest"
  }
}
